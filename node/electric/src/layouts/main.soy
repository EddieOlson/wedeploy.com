{namespace main}

/**
 */
{template .render}
  {@param content: ?}
  {@param site: ?}
  {@param? elementClasses: ?}

  <div class="{$elementClasses ?: 'main'}">
    <main class="content">
      {call Topbar.render data="all"}
          {param items: $site.topbar /}
          {param style: 'topbar-light' /}
          {param logo: [
            'image': '/images/logo.svg'
          ] /}
        {/call}

      {$content}
      {call Footer.render data="all"/}
    </main>
  </div>
{/template}
