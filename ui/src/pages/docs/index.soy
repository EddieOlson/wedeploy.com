---
title: "Documentation"
description: "Everything you need to know to get started."
weight: 2
---

{namespace pageDocsIndex}

/**
 * @param site
 */
{template .render}
	{call docs.render data="all"}
		{param content kind="html"}
			{call .topics data="all" /}
		{/param}
	{/call}
{/template}

/**
 * @param site
 */
{template .topics}
	<div class="container-hybrid docs-home-top">
		<div class="row">
			<div class="col-xs-16">
				<h1 class="docs-home-top-title">WeDeploy <span>Docs Center</span></h1>
				<p class="docs-home-top-description">Start learning how to leverage the power of {$site.title} in your project.</p>
			</div>
		</div>
		<div class="row">
			<div class="container-hybrid">
				<div class="row">
					<div class="col-xs-14 col-xs-offset-1 col-md-10 col-md-offset-3 col-lg-6 col-lg-offset-5">
						<div class="search">
							{call ElectricSearchAutocomplete.render}
								{param maxResults: 3 /}
								{param path: '/docs/' /}
								{param placeholder: 'Enter a search term here' /}
							{/call}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="docs-home-topics">
		<div class="container-hybrid">
			<div class="row">
				<div class="col-xs-16">
					<section class="docs-home-middle">
						<h2 class="docs-home-middle-subtitle">Choose a Guide</h2>
						<p class="docs-home-middle-description">Each one provide step by step coverage for every core feature.</p>
					</section>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 col-md-offset-2 col-xs-16">
					<div class="row">
						{foreach $topic in $site.index.children[1].children}
							{if not $topic.hidden}
								<div class="col-md-8 col-md-offset-0 col-xs-14 col-xs-offset-1">
									<a class="topic radial-out" href="{$topic.url}">
										<div class="topic-icon">
											<span class="icon-16-{$topic.icon}"></span>
										</div>
										<h3 class="topic-title">{$topic.title}</h3>
									</a>
								</div>
							{/if}
						{/foreach}
					</div>
				</div>
			</div>
		</div>
	</div>
{/template}
